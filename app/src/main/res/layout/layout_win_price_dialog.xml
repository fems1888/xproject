<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="@dimen/size_dp_300"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/win_price"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textStyleSeconderColor"
            android:text="@string/win_price"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textStyleSeconderColor"
            android:layout_marginTop="@dimen/size_dp_8"
            android:textSize="@dimen/size_sp_30"
            android:textColor="@color/main_selected_color"
            android:text="特等奖"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_dp_8"
            style="@style/textStyleSeconderColor"
            android:text="@string/current_bonus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/size_dp_8"
            android:layout_height="wrap_content"
            style="@style/textStyleMainColor"
            android:textSize="@dimen/size_sp_20"
            android:text="10000 XCoin"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_sure"
        style="@style/textStyleWhiteColor"
        android:layout_width="@dimen/size_dp_200"
        android:layout_height="@dimen/size_dp_44"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:background="@drawable/red_round_shape"
        android:gravity="center"
        android:text="@string/sure" />
</RelativeLayout>