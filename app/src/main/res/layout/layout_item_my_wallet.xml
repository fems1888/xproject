<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_dp_6">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_80"
            android:layout_marginLeft="@dimen/size_dp_10"
            android:layout_marginRight="@dimen/size_dp_10"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/size_dp_5"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_dp_16"
                android:layout_marginRight="@dimen/size_dp_16">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image_coin"
                    android:layout_width="@dimen/size_dp_40"
                    android:layout_height="@dimen/size_dp_40"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_bet_blue_ball" />

                <TextView
                    style="@style/textStyleMainColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_dp_22"
                    android:layout_toRightOf="@id/image_coin"
                    android:text="Eth"
                    android:textSize="@dimen/size_sp_24" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center|right"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textStyleMainColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123" />

                    <TextView
                        android:id="@+id/text_withdraw"
                        style="@style/textStyleMainColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:padding="@dimen/size_dp_3"
                        android:text="@string/withdraw"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/size_sp_12" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</layout>