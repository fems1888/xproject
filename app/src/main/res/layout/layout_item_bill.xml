<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
     android:layout_width="match_parent"
    android:layout_height="@dimen/size_dp_80"
    android:background="@color/white"
    android:padding="@dimen/size_dp_16">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_icon"
        android:layout_width="@dimen/size_dp_20"
        android:layout_height="@dimen/size_dp_20"/>
    <TextView
        android:id="@+id/text_type"
        style="@style/textStyleMainColor"
        android:textSize="@dimen/size_sp_14"
        android:text="共和国"
        android:layout_toRightOf="@id/image_icon"
        android:layout_marginLeft="@dimen/size_dp_16"
        />
    <TextView
        android:id="@+id/text_status"
        style="@style/textStyleMainColor"
        android:textSize="@dimen/size_sp_11"
        android:textColor="@color/main_selected_color"
        android:text="方法"
        android:layout_toRightOf="@id/text_type"
        android:layout_alignBaseline="@id/text_type"
        android:layout_marginLeft="@dimen/size_dp_8"
        />

    <TextView
        android:id="@+id/text_time"
        style="@style/textStyleHintColor"
        android:text="共和国"
        android:layout_below="@id/text_type"
        android:layout_alignLeft="@id/text_type"
        />

    <TextView
        android:id="@+id/text_unit"
        style="@style/textStyleMainColor"
        android:textSize="@dimen/size_sp_14"
        android:text="eth"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/text_amount"
        style="@style/textStyleMainColor"
        android:textSize="@dimen/size_sp_14"
        android:textColor="@color/main_selected_color"
        android:text="共和国"
        android:layout_marginRight="@dimen/size_dp_4"
        android:layout_toLeftOf="@id/text_unit"
        />
</RelativeLayout>
</layout>