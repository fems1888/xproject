<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_dp_80"
            android:layout_height="@dimen/size_dp_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_dp_60"
            app:srcCompat="@drawable/ic_xproject_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_30"
            android:layout_marginLeft="@dimen/size_dp_50"
            android:layout_marginRight="@dimen/size_dp_50"
            android:layout_marginTop="@dimen/size_dp_94">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_register_phone" />

            <EditText
                android:id="@+id/edit_phone"
                style="@style/textStyleMainColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_dp_6"
                android:layout_toRightOf="@id/image_phone"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_main_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/size_sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/text_seconder_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_30"
            android:layout_marginLeft="@dimen/size_dp_50"
            android:layout_marginRight="@dimen/size_dp_50"
            android:layout_marginTop="@dimen/size_dp_35">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_register_code" />

            <TextView
                android:id="@+id/text_get_code"
                style="@style/textStyleSeconderColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/get_code"
                android:textColor="@color/get_verify_text_selector" />

            <EditText
                android:id="@+id/edit_code"
                style="@style/textStyleMainColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_dp_6"
                android:layout_toLeftOf="@id/text_get_code"
                android:layout_toRightOf="@id/image_code"
                android:background="@null"
                android:hint="@string/input_verify_code"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/text_main_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="@dimen/size_sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_dp_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/text_seconder_color" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_login"
            style="@style/textStyleWhiteColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/size_dp_50"
            android:layout_marginRight="@dimen/size_dp_50"
            android:layout_marginTop="@dimen/size_dp_44"
            android:background="@drawable/button_red_selector"
            android:gravity="center"
            android:padding="@dimen/size_dp_12"
            android:text="@string/login" />

        <TextView
            style="@style/textStyleSeconderColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_dp_30"
            android:text="@string/no_register_tip" />
    </LinearLayout>
</layout>