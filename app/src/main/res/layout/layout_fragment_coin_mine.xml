<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddd">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/sure" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="@dimen/size_dp_14"
            android:layout_marginRight="@dimen/size_dp_14"
            app:cardCornerRadius="@dimen/size_dp_8"
            app:cardBackgroundColor="@color/white"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/size_dp_30">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textStyleMainColor"
                    android:text="@string/mine_stone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textStyleMainColor"
                    android:layout_marginTop="@dimen/size_dp_4"
                    android:textSize="@dimen/size_sp_40"
                    android:textColor="@color/main_selected_color"
                    android:text="123.13"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textStyleSeconderColor"
                    android:layout_marginTop="@dimen/size_dp_4"
                    android:drawableLeft="@drawable/ic_rocket_icon"
                    android:text="@string/velocity_factor"/>
                <TextView
                    android:id="@+id/text_accelerate"
                    android:layout_width="@dimen/size_dp_120"
                    android:layout_height="@dimen/size_dp_30"
                    style="@style/textStyleSeconderColor"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_dp_14"
                    android:textColor="@color/main_selected_color"
                    android:text="@string/accelerate"
                    android:background="@drawable/red_round_shape_stroke"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>