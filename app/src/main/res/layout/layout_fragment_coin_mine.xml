<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/mine_coin_bg" />

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="@dimen/size_dp_14"
            android:layout_marginRight="@dimen/size_dp_14"
            app:cardCornerRadius="@dimen/size_dp_8"
            app:cardBackgroundColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    style="@style/textStyleMainColor"
                    android:layout_marginTop="@dimen/size_dp_10"
                    android:text="@string/mine_stone"/>
                <TextView
                    style="@style/textStyleMainColor"
                    android:textSize="@dimen/size_sp_40"
                    android:textColor="@color/main_selected_color"
                    android:text="123.13"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_rocket_icon"/>
                    <TextView
                        android:id="@+id/text_factor"
                        style="@style/textStyleSeconderColor"
                        android:text="@string/velocity_factor"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/text_accelerate"
                    android:layout_width="@dimen/size_dp_120"
                    android:layout_height="@dimen/size_dp_30"
                    style="@style/textStyleSeconderColor"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_dp_14"
                    android:textColor="@color/main_selected_color"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/accelerate"
                    android:background="@drawable/red_round_shape_stroke"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="230dp"
            android:layout_height="240dp"
            app:srcCompat="@drawable/ic_mine_icon"
            android:layout_marginBottom="@dimen/size_dp_12"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/card"
            android:id="@+id/appCompatImageView" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_above="@+id/appCompatImageView"
            android:layout_alignStart="@+id/appCompatImageView"
            android:layout_marginStart="66dp"
            android:background="@mipmap/mine_ball"
            android:id="@+id/appCompatImageView1" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_above="@+id/appCompatImageView"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/appCompatImageView1"
            android:background="@mipmap/mine_ball"
            android:id="@+id/appCompatImageView2" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView3"
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_alignEnd="@+id/appCompatImageView"
            android:layout_below="@+id/appCompatImageView8"
            android:background="@mipmap/mine_ball" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_alignStart="@+id/appCompatImageView"
            android:layout_alignTop="@+id/appCompatImageView"
            android:layout_marginTop="11dp"
            android:background="@mipmap/mine_ball"
            android:id="@+id/appCompatImageView4"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView5"
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_above="@+id/appCompatImageView2"
            android:layout_toStartOf="@+id/appCompatImageView12"
            android:background="@mipmap/mine_ball" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView6"
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_alignBottom="@+id/appCompatImageView5"
            android:layout_alignStart="@+id/appCompatImageView2"
            android:layout_marginBottom="9dp"
            android:background="@mipmap/mine_ball" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView7"
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_above="@+id/appCompatImageView2"
            android:layout_alignStart="@+id/appCompatImageView3"
            android:background="@mipmap/mine_ball" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView8"
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_alignEnd="@+id/appCompatImageView4"
            android:layout_below="@+id/appCompatImageView6"
            android:layout_marginEnd="27dp"
            android:background="@mipmap/mine_ball" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView9"
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_alignStart="@+id/appCompatImageView7"
            android:layout_below="@+id/appCompatImageView3"
            android:layout_marginStart="22dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/mine_ball" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView10"
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_alignEnd="@+id/appCompatImageView8"
            android:layout_below="@+id/appCompatImageView4"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/mine_ball" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView11"
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_above="@+id/appCompatImageView"
            android:layout_toEndOf="@+id/appCompatImageView7"
            android:background="@mipmap/mine_ball" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView12"
            android:layout_width="@dimen/size_dp_50"
            android:layout_height="@dimen/size_dp_50"
            android:layout_above="@+id/appCompatImageView5"
            android:layout_toStartOf="@+id/appCompatImageView6"
            android:background="@mipmap/mine_ball" />

    </RelativeLayout>
</layout>