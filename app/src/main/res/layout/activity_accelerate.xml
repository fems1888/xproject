<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_tool_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_80"
            android:padding="@dimen/size_dp_16">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_one"
                android:layout_width="@dimen/size_dp_40"
                android:layout_height="@dimen/size_dp_40"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_daily_login" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_16"
                android:layout_toRightOf="@id/image_one"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    style="@style/textStyleMainColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/day_login" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_rocket_icon" />

                    <TextView
                        android:id="@+id/text_login_factor"
                        style="@style/textStyleSeconderColor"
                        android:layout_marginLeft="@dimen/size_dp_5"
                        android:text="@string/withdraw"
                        android:textColor="@color/main_selected_color" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/button_login"
                style="@style/textStyleSeconderColor"
                android:layout_width="@dimen/size_dp_73"
                android:layout_height="@dimen/size_dp_30"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/red_gray_selector"
                android:background="@drawable/round_stroke_no_bg"
                android:text="已完成" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_80"
            android:padding="@dimen/size_dp_16">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_two"
                android:layout_width="@dimen/size_dp_40"
                android:layout_height="@dimen/size_dp_40"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_join_activity" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_16"
                android:layout_toRightOf="@id/image_two"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    style="@style/textStyleMainColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arena_activity" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_rocket_icon" />

                    <TextView
                        android:id="@+id/text_activity_factor"
                        style="@style/textStyleSeconderColor"
                        android:layout_marginLeft="@dimen/size_dp_5"
                        android:text="@string/withdraw"
                        android:textColor="@color/main_selected_color" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/button_activity"
                style="@style/textStyleSeconderColor"
                android:layout_width="@dimen/size_dp_73"
                android:layout_height="@dimen/size_dp_30"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/red_gray_selector"
                android:background="@drawable/round_stroke_no_bg"
                android:text="已完成" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_80"
            android:padding="@dimen/size_dp_16"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_thr"
                android:layout_width="@dimen/size_dp_40"
                android:layout_height="@dimen/size_dp_40"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_join_activity" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dp_16"
                android:layout_toRightOf="@id/image_thr"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/textStyleMainColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/join_activity" />

                <TextView
                    style="@style/textStyleSeconderColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_rocket_icon"
                    android:drawablePadding="@dimen/size_dp_4"
                    android:text="@string/day_login"
                    android:textColor="@color/main_selected_color" />
            </LinearLayout>

            <TextView
                style="@style/textStyleSeconderColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="已完成" />
        </RelativeLayout>
    </LinearLayout>
</layout>